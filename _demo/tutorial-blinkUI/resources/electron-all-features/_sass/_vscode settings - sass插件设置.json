{
  "security.workspace.trust.untrustedFiles": "open",
  "tabnine.experimentalAutoImports": true,
  "workbench.iconTheme": "vscode-icons",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.printWidth": 180,
  "eslint.format.enable": true,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "html.trace.server": "messages",
  // "html.trace": "verbose",
  "security.workspace.trust.enabled": false,
  "markdown-preview-enhanced.enableScriptExecution": true,
  "markdown-preview-enhanced.HTML5EmbedIsAllowedHttp": true,
  "livePreview.showServerStatusNotifications": false,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "debug.javascript.codelens.npmScripts": "all",
  "debug.javascript.debugByLinkOptions": "on",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      // "savePath":  "/dist/css" 这2种都可以
      // Starting with / or \ means the path is relative to the workspace root
      // Starting with ~/ or ~\ means that it's relative to the file being processed
      "savePath": "/dist/css",
      "savePathReplacementPairs": null
    },
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": "/dist/css"
    }
  ],
  // 告诉编译器/是相对于工作区根目录而不是驱动器根目录的。
  "liveSassCompile.settings.rootIsWorkspace": true,

  // 使用SASS2.0
  // "liveSassCompile.settings.useNewCompiler": true,
  // 只编译下面这些文件。 如果没有此项，则会编译整个项目的sass
  "liveSassCompile.settings.includeItems": ["/_sass/**"],
  "liveSassCompile.settings.compileOnWatch": false,
  "liveSassCompile.settings.showOutputWindowOn": "Warning",
  // 自动启动监控
  "liveSassCompile.settings.watchOnLaunch": true
}
